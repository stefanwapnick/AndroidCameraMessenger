<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.stefan.cameramessengerapp" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".infrastructure.CameraMessengerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name=".activities.LoginNarrowActivity"
            android:label="LoginNarrowActivity" />
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name=".activities.ExternalLoginActivity"
            android:label="@string/title_activity_external_login" >
        </activity>
        <activity android:name=".activities.ContactsActivity"/>
        <activity android:name=".activities.ProfileActivity"/>
        <activity android:name=".activities.SentMessagesActivity"/>
        <activity android:name="com.soundcloud.android.crop.CropImageActivity"/>
        <activity android:name=".activities.AuthenticationActivity"/>
    </application>

</manifest>
