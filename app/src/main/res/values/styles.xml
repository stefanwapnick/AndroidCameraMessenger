<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
    </style>

    <style name="PrimaryButtonTheme">
        <item name="android:background">@color/color_primary</item>
        <item name="android:textColor">@color/color_text_primary</item>
        <item name="android:layout_marginBottom">@dimen/view_vertical_margin</item>
    </style>

    <style name="PrimaryViewTheme">
        <item name="android:textColor">@color/color_text_body</item>
        <item name="android:layout_marginBottom">@dimen/view_vertical_margin</item>
    </style>

</resources>
